            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="IssueDate" class="control-label"></label>
                    <input asp-for="IssueDate" class="form-control" readonly />
                    <span asp-validation-for="IssueDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ChequeNumber" class="control-label"></label>
                    <input asp-for="ChequeNumber" class="form-control"  readonly />
                    <span asp-validation-for="ChequeNumber" class="text-danger"></span>
