@model DCMS.Models.DishonoredCheque

@{
    ViewData["Title"] = "ViewDetail";
    Layout = null;
}

<div class="container">
    <form asp-action="ViewDetail">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Branch" class="control-label"></label>
                    @Html.DropDownList("Branch", (SelectList)ViewBag.branchList, "--select--", new { @class = "form-control",@disabled = "disabled"})
                    <span asp-validation-for="Branch" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="HomeBranch" class="control-label"></label>
                    @Html.DropDownList("HomeBranch", (SelectList)ViewBag.branchList, "--select--", new { @class = "form-control",@disabled = "disabled" })
                    <span asp-validation-for="HomeBranch" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SubCity" class="control-label"></label>
                    <input asp-for="SubCity" class="form-control" readonly />
                    <span asp-validation-for="SubCity" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Telephone" class="control-label"></label>
                    <input asp-for="Telephone" class="form-control" readonly />
                    <span asp-validation-for="Telephone" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="InstanceDate" class="control-label"></label>
                    <input asp-for="InstanceDate" class="form-control" readonly/>
                    <span asp-validation-for="InstanceDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TIN_Number" class="control-label"></label>
                    <input asp-for="TIN_Number" class="form-control" readonly />
                    <span asp-validation-for="TIN_Number" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="AccountNumber" class="control-label"></label>
