@model DCMS.Models.Setup.User

@{
    ViewData["Title"] = "Change Password";
    if (TempData["msg"] != null)
    {
        <script>swal("Berhan Bank", '@TempData["msg"]', "error")</script>
    }
    TempData["msg"] = null;
}

<h1>Change Password</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="hidden" asp-for="FullName" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <input asp-for="UserName" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Email" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Current Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">New Password</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfiermPassword" class="control-label">Confierm Password</label>
                <input asp-for="ConfiermPassword" class="form-control" />
                <span asp-validation-for="ConfiermPassword" class="text-danger"></span>
            </div>
                    <input type ="hidden" class="form-check-input" asp-for="viewStatus" />

            
            <input type="hidden" asp-for="RoleId" />
            <input type="hidden" asp-for="RoleId" />
            <hr/>
            <div class="form-group">
                <input type="submit" value="Create" class="form-control btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
